<h1><%= album.name %></h1>
<h4>Edit Song Name</h4>
<form
  action="/albums/<%= album.id %>/songs/<%= song.id %>?_method=PUT"
  method="POST"
>
  <div class="form-group">
    <label for="song">Song Title</label>
    <input
      type="text"
      class="form-control"
      id="song"
      name="title"
      value="<%= song.title %>"
    />
  </div>
  <button type="submit" class="btn btn-primary">Save Changes</button>
</form>